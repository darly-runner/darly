<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/ranking_background"
            android:paddingHorizontal="20dp">

            <ImageView
                android:id="@+id/matchHostImg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/goalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="10"
                        android:textColor="@color/main" />

                    <TextView
                        android:id="@+id/goalDistanceUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:paddingRight="10dp"
                        android:text="km"
                        android:textColor="@color/main" />

                    <TextView
                        android:id="@+id/matchTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hostNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="nickname"
                        android:textColor="@color/gray_600" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:src="@drawable/ic_circle" />

                    <TextView
                        android:id="@+id/currentNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/6"
                        android:textColor="@color/gray_600" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/isStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="2dp"
                android:textSize="12dp"
                android:text="started"
                android:textStyle="italic" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/matchDisable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ranking_background"
            android:backgroundTint="#99ffffff" />
    </FrameLayout>

</layout>